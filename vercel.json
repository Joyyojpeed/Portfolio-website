{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "includeFiles": ["public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/.+",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/images/.+",
      "dest": "/public/images/$1"
    },
    {
      "src": "/(.*\\.(jpg|jpeg|png|gif|svg|pdf))",
      "dest": "/public/$1"
    },
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}